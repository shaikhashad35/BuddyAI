{
    
    "name": "Buddy AI - Powered by ChatGPT",
    "description": "Use the power of ChatGPT at your fingertips, The Buddy will serve you.",
    "author": "Ashad Shaikh",
    "version": "0.0.1",
    "manifest_version": 3,
    "permissions": ["activeTab"],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "runAt": "document_end",
            "js": ["script.js"],
            "all_frames": true
        }
    ]
}